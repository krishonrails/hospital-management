<div class="col-md-9 no-gutter">
	<h2 class="header-title">Listing Roles<span><%= link_to 'New Role', new_role_path, class: 'btn btn-primary pull-right' %></span></h2>
	<!-- pagination html start -->
	<div class="text-center">
		<div class="panel pagination">
			<%= paginate @roles %>
		</div>
	</div>
	<!-- pagination html end -->
	<div class="table-responsive roles-list">
		<table class='table table-striped'>
			<thead>
				<th>Role</th>
				<th colspan="2">&nbsp;</th>
			</thead>
			<tbody>
				<% @roles.each do |role| %>
					<tr>
						<td class="role-name"><%= link_to role.name.titleize, role %></td>
						<td><%= link_to 'Edit', edit_role_path(role), class: 'btn btn-info' %></td>
						<td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<!-- pagination html start -->
	<div class="text-center">
		<div class="panel pagination">
			<%= paginate @roles %>
		</div>
	</div>
	<!-- pagination html end -->
	<div class="clear"></div>
	<div class="col-md-12 no-gutter">
		<%= link_to 'New Role', new_role_path, class: 'btn btn-primary pull-right' %>
	</div>
</div>
