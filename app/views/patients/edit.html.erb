<div class="panel-layout">
	<div class="panel panel-default">
		<div class="panel-heading">Edit Account Information</div>
		<div class="panel-body">
			<%= form_for(@patient, url: update_profile_path(@patient), html: { method: :put }) do |f| %>
				<div class="field">
					<%= f.label :first_name %><br />
					<%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
				</div>
				<div class="field">
					<%= f.label :last_name %><br />
					<%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
				</div>
				<div class="field">
					<%= f.label :account_number %><br />
					<%= f.text_field :account_number, autofocus: true, readonly: true, class: 'form-control' %>
				</div>
				<div class='gmaps'>
					<div class='input-gmaps-autocomplete'>
						<%= f.text_field :location, id: 'gmaps-input-address', class: 'text-tab form-control', placeholder: 'address' %>
						<div class='gmaps-error'></div>
					</div>
					<div id='gmaps-canvas'></div>
				</div>
				<div class="actions text-center">
					<%= f.submit "Update", class: 'btn btn-success' %>
				</div>
			<% end %>
		</div>
	</div>
</div>